// These widths must match those in pathpuzzles.coffee
majorWidth = 3/36
minorWidth = 1/36
fontSize = 24px/36px

@media print
  .noprint
    display: none

.w-100
  width: 100%
.text-left
  text-align: left
.text-right
  text-align: right
.align-middle
  vertical-align: middle

svg
  width: 100%
  height: 100%

  rect.background
    fill: white
    stroke: none
  g line
    stroke-width: minorWidth
    stroke: black
    stroke-linecap: square
  text
    font-family: Myriad Pro, sans-serif
    font-size: fontSize
    text-anchor: middle

  .solution line
    stroke-width: majorWidth
    //stroke: rgba(0,0,0,0)

